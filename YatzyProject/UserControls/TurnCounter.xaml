<UserControl x:Class="Yatzy.UserControls.UTurnCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <DataGrid Name="gbTurnCounter" AutoGenerateColumns="False" ItemsSource="{Binding CurrentGame.PlayerScoresCopy}" SelectedItem="{Binding CurrentPlayerScore, Mode=OneWay}" FontSize="22">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Navn" Binding="{Binding VMPlayer.Name}"/>
                <DataGridTextColumn Header="Sum" Binding="{Binding VMScoreboard.Sum2}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>

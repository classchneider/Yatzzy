<UserControl x:Class="Yatzy.UserControls.USetupGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button x:Name="DemoButton" Content="Demo" HorizontalAlignment="Left" Margin="120,95,0,0" VerticalAlignment="Top" Click="DemoButton_Click"/>
        <TextBox x:Name="tb_Name" HorizontalAlignment="Left" Margin="10,61,0,0" TextWrapping="Wrap" VerticalAlignment=" Top" Width="120"/>
        <Label Content="PlayerName" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_AddPlayer" Content="Add" HorizontalAlignment="Left" Margin="174,95,0,0" VerticalAlignment="Top" Click="btn_AddPlayer_Click"/>
        <ListBox x:Name="lb_Players" DisplayMemberPath="Name" ItemsSource="{Binding Players}" HorizontalAlignment="Left" Height="212" Margin="47,157,0,0" VerticalAlignment="Top" Width="190"/>
    </Grid>
</UserControl>

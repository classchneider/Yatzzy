<UserControl x:Class="Yatzy.UserControls.CurrentPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yatzy.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock  Margin="10,20,0,0" TextWrapping="Wrap" Text="Player:" VerticalAlignment="Top" FontSize="48"/>
            <TextBlock  Margin="10,20,0,0" TextWrapping="Wrap" Text="{Binding CurrentPlayer.Name}" VerticalAlignment="Top" FontSize="48"/>
        </StackPanel>
    </Grid>
</UserControl>

<Window x:Class="Yatzy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewModels;assembly=ViewModels"
        mc:Ignorable="d"
        Title=" -- The amazing Yatzy game -- " Height="700" Width="1000">
    <Window.DataContext>
        <local:VMYatzyGeneral/>
    </Window.DataContext>
    <Grid>
        <TabControl>
            <!--<TabItem Header="New Game">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>-->
            <TabItem Header="Scoreboard">
                <Grid x:Name="GameGrid"  Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="g_Left" Grid.Column="0">
                    </Grid>
                    <Grid x:Name="g_Right" Grid.Column="1">
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
